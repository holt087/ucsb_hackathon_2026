{
  "manifest_version": 3,
  "name": "Lighthouse",
  "version": "1.0",
  "description": "Focus mode for reading: hover, click to zoom, blur background.",
  "permissions": ["activeTab", "scripting"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "ai-integration.js"],
      "css": ["styles.css"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  }
}

  