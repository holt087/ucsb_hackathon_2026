{
  "manifest_version": 3,
  "name": "Focus Flow",
  "version": "1.0",
  "description": "AI-powered ADHD focus tool",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}